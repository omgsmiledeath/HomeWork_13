<Window x:Class="HomeWork_13.Carts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_13"
        mc:Ignorable="d"
        Title="Carts" Height="450" Width="800">
<Grid>
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    
        <StackPanel Grid.Column="0">
            <DataGrid x:Name="CartListGrid" 
                     AutoGenerateColumns="True" SelectionChanged="CartListGrid_SelectionChanged"/>
            <Button x:Name="OpenSave" 
                    Content="Открыть сберегательный счет"
                    Click="OpenSave_Click"
                    Width="200" Height="30"
                    Margin="10 10 10 10"/>
            <Button x:Name="OpenCredit"
                    Content="Открыть кредитный счет" 
                    Click="OpenCredit_Click"
                    Width="200" Height="30"
                    Margin="10 0 10 10"/>
            <!--#region Грид с элементами работы со сберегательным счетом -->
            <Grid x:Name="SaveAccountGrid" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <Button x:Name="DepositButton" Margin="5 5 5 5"
                        Content="Внести на счет"
                        Grid.Column="0" Grid.Row="0" Click="DepositButton_Click"/>
                <TextBox x:Name="DepositBox" Margin="5 5 5 5"
                        Grid.Column="1" Grid.Row="0"/>
                <StackPanel x:Name="SaveAccPanel" Visibility="Collapsed"
                             Grid.ColumnSpan="2" Grid.Row="1">
                    <Grid x:Name="GrinInSaveAccPanel">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>
                        
                        <Button x:Name="StartInvestmentButton" Margin="5 5 5 5"
                                Grid.Column="0" Grid.Row="0"
                        Content="Сделать вклад"  Click="StartInvestmentButton_Click"/>
                        <TextBox x:Name="InvestmentBox" Margin="5 5 5 5"
                                 Grid.Column="1" Grid.Row="0"/>
                        <StackPanel x:Name="SaveAccountDatePanel" Grid.ColumnSpan="2" Grid.Row="1" >
                        <Button x:Name="CompleteInvestmentButton" Margin="25 5 25 5"
                        Content="Забрать вклад" Click="CompleteInvestmentButton_Click" 
                                />
                        <TextBox x:Name="InvestmentStartDateBox" IsReadOnly="True"/>
                        <TextBox x:Name="InvestmentCompleteDateBox" IsReadOnly="True" />

                </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            <!--#endregion-->
            
        </StackPanel>
    
        <StackPanel Grid.Column="1">
            <ListBox x:Name="ListOfLogTransaction" 
                     Width="300" Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
        </StackPanel>
    </Grid>
</Window>
