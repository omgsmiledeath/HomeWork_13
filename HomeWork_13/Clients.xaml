<Page x:Class="HomeWork_13.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeWork_13"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Clients" Loaded="Page_Loaded" Foreground="Black" Background="#FFF0F0F0">

    <Grid x:Name="PageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0" x:Name="BottonGridLane"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Действия" Height="auto" Width="auto">
                <MenuItem  x:Name="AddClientMenuItem"
                    Header="Новый клиент" Click="AddClientMenuItem_Click"/>
                <MenuItem Header="Удалить"/>
            </MenuItem>
        </Menu>

        <DataGrid x:Name="AccountListGrid" Grid.Row="1"
                      AutoGenerateColumns="True"
                      AutoGeneratingColumn="gridAutoGeneratedColumnsEvent"
                  >
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="OpenCartInfo"
                                    DataContext="{Binding}">Показать счета</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
        <!--StackPanel с полями для воода данных -->

        <StackPanel Orientation="Horizontal" Grid.Row="2" x:Name="AddClientStackPanel">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="ФИО" HorizontalAlignment="Center"/>
                <TextBox Width="100" x:Name="NameBox"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Адресс" HorizontalAlignment="Center"/>
                <TextBox Width="100" x:Name="AdressBox"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Телефон" HorizontalAlignment="Center"/>
                <TextBox Width="100" x:Name="PhoneBox"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Директор" HorizontalAlignment="Center"/>
                <TextBox Width="100" x:Name="DirectorBox"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Вид организации" HorizontalAlignment="Center"/>
                <TextBox Width="100" x:Name="TypeOrgBox"/>
            </StackPanel>

            <Button x:Name="AddClientButton" Width="60" 
                    Content="Добавить" Click="AddClientButton_Click"
                    Margin="10"/>

        </StackPanel>

    </Grid>
</Page>
